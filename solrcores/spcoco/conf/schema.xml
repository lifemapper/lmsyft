<?xml version="1.0" encoding="UTF-8" ?>
<schema name="spcoco" version="0.1">
  
   <!-- Recommended fields for Solr -->
   <uniqueKey type="solr.StrField" indexed="true" stored="true">occurrence_guid</uniqueKey>   
   <!-- <field name="_version_" type="long" indexed="true" stored="true" /> -->
   
   <!-- Specify resolver fields -->
   <!-- =========================================== -->
   <!-- GUIDs -->
   <field name="occurrence_guid" type="solr.StrField" indexed="true" stored="true" />
   <field name="dataset_guid" type="solr.StrField" indexed="true" stored="true" />
   
   <!-- ARK metadata -->
   <!-- similar to DC Creator, Contributor, Publisher -->
   <!-- DWC institutionCode -->
   <field name="who" type="solr.StrField" indexed="true" stored="true" />
   
   <!-- similar to DC Title -->
   <!-- DWC basisOfRecord -->
   <field name="what" type="solr.StrField" indexed="true" stored="true" />
   
   <!-- similar to DC Date -->
   <!-- DWC yyyy-mm-dd (concatenated fields) -->
   <field name="when" type="solr.StrField" indexed="true" stored="true" />
   
   <!-- similar to DC Identifier, optional as this is the ARK -->
   <!-- ARK pointing to Specify resolver -->
   <field name="where" type="solr.StrField" indexed="true" stored="true" />

   <!-- Supplemental ARK metadata -->
   <!-- redirection URL -->
   <!-- URL pointing to Specify API -->
   <field name="url" type="solr.StrField" indexed="true" stored="true" />
      

</schema>
